<%- include('./partials/header') %>

<div class="container">
    <div class="row">
        <div class="col-sm-6 mt-5">
            <h2 class="alert alert-success text-centre">Update Student</h2>
            <form method="post"action="/student/update/<%=data._id%>">
                <div class="mb-3">
                    <label for="name" class="form-lable">Name</label>
                    <input type="text" class="form-control" id="name" name="name"value="<%= data.name%>">
                </div>
                <div class="mb-3">
                    <label for="age" class="form-lable">Age</label>
                    <input type="text" class="form-control" id="age" name="age"value="<%= data.age%>">
                </div>
                <div class="mb-3">
                    <label for="fees" class="form-lable">fees</label>
                    <input type="text" class="form-control" id="fees" name="fees"value="<%= data.fees%>">
                </div>
                <button class="btn btn-primary">update</button>
                <button class="btn btn-secondary">Back to Home</button>
            </form>
        </div>
    </div>
</div>

<%- include('./partials/footer') %>